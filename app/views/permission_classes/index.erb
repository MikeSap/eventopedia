<%= form_for  :user, url: '/permission_classes/set_permissions' do |f| %>
   
   <%@users.each do |user|%>
    <%= f.fields_for user do |u|%>
    <%= u.label user.full_name %>
    <%= u.hidden_field :user_id, value: user.id %><br>
    <%= u.collection_select :permission_class_id, @permission_classes, :id, :title %><br>
    <br>
    <%end%>
    <%end%>


    <%= f.hidden_field :vendor_id, value: @current_user.vendor.id %><br>

    <%=f.submit%>

    <%end%>