<%= form_for  :user, url: '/permission_classes/set_permissions' do |f| %>
<table>
   <thead class="thead-dark">
      <tr>
         <th>Name</th>
         <th>Title</th>
      </tr> 
   </thead>
   <tbody>
   <%@users.each do |user|%>
   <tr>
    <%= f.fields_for user do |u|%>
    <td>
    <%= u.label user.full_name, "#{user.full_name}" %>
    </td>
    <%= u.hidden_field :user_id, value: user.id %>
    <td>
    <%= u.collection_select :permission_class_id, @permission_classes, :id, :title %>
    </td>
    <%end%>
   </tr>
    <%end%>


    <%= f.hidden_field :vendor_id, value: @current_user.vendor.id %>
</tbody>
</table>
    <%=f.submit%>

    <%end%>