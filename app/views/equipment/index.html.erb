<% @categories.each do |cat|%>

<table class="table table-striped table-bordered table-sm">
    <thead class="thead-dark">
        <tr>
            <th>Equipment Name</th>
            <th>Quantity Owned</th>
            <th>Category</th>
            <th>SubCategory</th>
        </tr>
    </thead>
    <tbody>
<% @equipment.where(category: cat).each do |e| %>
    <tr> 
    <td><%= link_to e.name, equipment_path(e) %></td>
    <td> <%= e.quantity %> </td>
    <td> <%= e.category %> </td>
    <td> <%= e.sub_category %> </td>
    </tr>
<% end %>
</tbody>
</table>
<%if @permission.create_equipment %>
<%= link_to "Add #{cat} Equipment", new_equipment_path(category: cat) %>
<%end%>

<%end%>