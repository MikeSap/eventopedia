<div class="container-fluid float-left">
    <div class="row">
        <div class="col-lg-6">
            <table class="table table-striped table-bordered table-sm">
                <caption style='caption-side: top'>Vendor Info</caption>
                <tr>
                    <td>Name</td>
                    <td><%= @vendor.name %></td>
                </tr>
                <tr>
                    <td>Address:</td>
                    <td><%= @vendor.address %></td>
                </tr>
                <tr>
                    <td>Website:</td>
                    <td><%= @vendor.url %></td>
                </tr>
                <tr>
                    <td>Phone Number:</td>
                    <td><%= @vendor.phone_number %></td>
                </tr>
                <tr>
                    <td>Contact Email:</td>
                    <td><%= @vendor.contact_email %></td>
                </tr>
            </table>
            <%= link_to 'Edit Vendor', edit_vendor_path(@vendor) %>
        </div>
        <div class="col-lg-6">
            <table class="table table-striped table-bordered table-sm">
                <caption style='caption-side: top'>Job Titles</caption>
                <% @permission_classes.each do |pc| %>
                    <tr>
                        <td><%= pc.title %></td>
                        <td><%= link_to 'edit', edit_permission_class_path(pc) %></td>
                        <td><%= link_to 'delete', permission_class_path(pc), method: 'delete' %></td>
                    </tr>
                <% end %>
            </table>
            <%= link_to 'Add Job Title', new_permission_class_path %>
        </div>
    </div>
</div>