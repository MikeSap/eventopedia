<h1><%= "#{@user.first_name} #{@user.last_name}"%></h1>
<h2>@<%=@user.username%></h2>
<h3><%= @user.permission_class.title %></h3> 
  
<% if @user.permission_class.bookable %>
  <table class="table table-striped table-bordered table-sm">
    <caption style='caption-side: top'>Schedule</caption>
    <thead class="thead-dark">
      <tr>
        <th>Show</th>
        <th>Venue</th>
        <th>Call Time</th>
        <th>Out Time</th>
      </tr>
    </thead>
    <tbody>
    <% @gigs.each do |gig| %>
      <tr>
        <td> <%= link_to gig.show.name, show_path(gig.show) %></td> 
        <td> <%= gig.show.venue %></td> 
        <td> <%= gig.call_time %></td> 
        <td> <%=gig.out_time%> </td>
      </tr> 
    <% end %>
    </tbody>
  </table>


<%end%>

<% if @current_user.id == @user.id %>
<%= link_to 'Edit User', edit_user_path(@user)%>
<%end%>
<% if @current_user.permission_class.create_users %>
<%= link_to 'Delete User', user_path(@user), method: "delete", data: { confirm: "Are you sure?" }%>
<%end%>




